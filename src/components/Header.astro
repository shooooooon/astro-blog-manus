---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <div class="container">
    <nav>
      <div class="logo">
        <a href="/" class="site-title">{SITE_TITLE}</a>
      </div>
      <div class="nav-links">
        <HeaderLink href="/">ブログ</HeaderLink>
        <HeaderLink href="/categories/">カテゴリ</HeaderLink>
        <HeaderLink href="/search">検索</HeaderLink>
        <HeaderLink href="/about">Shooonについて</HeaderLink>
      </div>
    </nav>
  </div>
</header>
<style>
  header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
  }

  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1a1a1a;
    text-decoration: none;
    letter-spacing: -0.02em;
    transition: color 0.2s ease;
  }

  .site-title:hover {
    color: #4f46e5;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links :global(a) {
    color: #64748b;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
  }

  .nav-links :global(a):hover {
    color: #1a1a1a;
  }

  .nav-links :global(a.active) {
    color: #4f46e5;
  }

  @media (max-width: 768px) {
    .container {
      padding: 0 1rem;
    }

    nav {
      height: 60px;
    }

    .site-title {
      font-size: 1.25rem;
    }

    .nav-links {
      gap: 1.5rem;
    }

    .nav-links :global(a) {
      font-size: 0.9rem;
    }
  }
</style>
